{
  "name": "BridgeSSH",
  "version": "1.0.0",
  "description": "A GUI SSH client",
  "main": "main.js",
  "author": "Izhan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/izhank216/BridgeSSH.git"
  },
  "info": {
    "appName": "BridgeSSH",
    "website": "https://github.com/izhank216/BridgeSSH",
    "version": "1.0.0"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.izhan.bridgessh",
    "productName": "BridgeSSH",
    "files": ["**/*"],
    "directories": { "buildResources": "renderer" },
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" },
    "linux": { "target": "AppImage" },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@xterm/xterm": "6.0.0",
    "ssh2-streams": "0.4.10",
    "jquery": "^3.7.0",
    "bootstrap": "^5.3.2",
    "bootstrap-validator": "^0.11.9"
  },
  "devDependencies": {
    "electron": "39.2.7",
    "electron-builder": "26.4.0"
  }
}
